<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
>

    <cn.iterlog.xmimagepicker.widget.BackupImageView
        android:id="@+id/iv_portrait"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/media_margin"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/nophotos"
        app:layout_heightPercent="100%w"
        app:layout_widthPercent="100%w"/>

    <cn.iterlog.xmimagepicker.widget.RippleChoiceView
        android:id="@+id/rcv_choice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="34%w"
        app:layout_widthPercent="34%w"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:layout_paddingPercent="8%w"
        app:borderWidth="2dp"
        app:checkedColor="@color/green"
        app:backgroundColor="#77000000"
        app:borderColor="@color/white"
        app:crossColor="@android:color/white"
        app:checked="false"
        app:crossType="cross"
        app:rippleduration="300"/>
    <ImageView
        android:id="@+id/iv_video_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_portrait"
        android:src="@drawable/ic_camera_white"
        app:layout_marginBottomPercent="2.5%w"
        app:layout_marginLeftPercent="6%w"/>

</com.zhy.android.percent.support.PercentRelativeLayout>

