<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlebar"
        layout="@layout/title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.chd.yunpan.utils.PhotoView
            android:id="@+id/pic_detail_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/pic_detail_btm_layout"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pic_detail_savelocal"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_pic_delete"
                android:text="保存到本地"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/pic_detail_delete"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_pic_delete"
                android:text="删除"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/pic_detail_cancel"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/btn_pic_cancel"
            android:text="取消"
            android:textColor="#feb902"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>