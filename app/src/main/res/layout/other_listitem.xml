<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="84dp"
    android:layout_marginLeft="12dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/cb_edit_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:button="@drawable/select_cb"
        android:visibility="gone" />



    <ImageView
        android:id="@+id/other_list_item_img"
        android:layout_width="50dp"
        android:layout_toRightOf="@id/cb_edit_check"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp" />


        <TextView
            android:id="@+id/other_list_item_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-5dp"
            android:layout_alignTop="@id/other_list_item_img"
            android:layout_toRightOf="@id/other_list_item_img"
            android:text="1231"
            android:textColor="#333333"
            android:textSize="16sp" />



            <TextView
                android:id="@+id/other_list_item_appintro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="dsadsa"
                android:layout_below="@id/other_list_item_appname"
                android:layout_alignLeft="@id/other_list_item_appname"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/other_list_item_appsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="14sp" />

</RelativeLayout>