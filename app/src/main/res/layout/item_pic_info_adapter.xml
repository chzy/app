<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp" >

    <RelativeLayout
        android:id="@+id/rl_flag"
        android:layout_width="45dp"
        android:layout_height="64dp"
        android:layout_marginLeft="15dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_pic_info_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_pic_info_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/rl_flag"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_pic_info_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/tv_pic_info_month"
        android:textColor="#999999"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:src="@drawable/pic_icon3" />

</RelativeLayout>