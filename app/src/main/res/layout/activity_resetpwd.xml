<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ResetpwdActivity" >

   <include layout="@layout/title_bar" android:id="@+id/resetpwd_title"/>


    <LinearLayout
        android:id="@+id/reset_password"
        style="@style/accountInputBorder"
        android:layout_below="@id/resetpwd_title"
        android:layout_marginTop="50dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qihoo_accounts_pass_lable"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="  |  " />

        <EditText
            android:id="@+id/rset_ed_pwd"
            style="@style/accountEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="@string/et_password_hint"
            android:password="true"
            android:layout_height="fill_parent" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/reset_confim_password"
        style="@style/accountInputBorder"
        android:layout_below="@id/reset_password"
        android:layout_marginTop="50dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qihoo_accounts_pass_lable"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="  |  " />

        <EditText
            android:id="@+id/rset_confirm_pwd"
            style="@style/accountEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="@string/et_confirm_password_hint"
            android:password="true"
            android:layout_height="fill_parent" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutRsetpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_confim_password"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal"
        android:layout_marginTop="13dp" >


        <com.chd.yunpan.view.circleimage.CircularProgressButton
            android:id="@+id/rset_pwd_cr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_margin="50dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cpb_cornerRadius="48dp"
            app:cpb_textComplete="重置完成"
            app:cpb_textError="重置失败"
            app:cpb_textIdle="重置密码"
            app:cpb_selectorIdle="@drawable/idle_state_selector"
            app:cpb_selectorComplete="@drawable/complete_state_selector"
            app:cpb_selectorError="@drawable/error_state_selector"/>
        <Button
            android:id="@+id/rset_pwd_bt"
            android:visibility="gone"
            style="@style/accountButtonStyle"
            android:layout_marginRight="4dp"
            android:background="@color/grey"
            android:text="重置密码" />
    </LinearLayout>




</RelativeLayout>