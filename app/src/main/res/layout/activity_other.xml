<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#F0F0F0" />

    <LinearLayout
        android:id="@+id/freedown_tab_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/other_tab_all"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/other_tab_left_checked"
            android:gravity="center"
            android:text="全部"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/other_tab_doc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/other_tab_center_normal"
            android:gravity="center"
            android:text="DOC"
            android:textColor="#f8b82d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/other_tab_xls"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/other_tab_center_normal"
            android:gravity="center"
            android:text="XLS"
            android:textColor="#f8b82d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/other_tab_ppt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/other_tab_center_normal"
            android:gravity="center"
            android:text="PPT"
            android:textColor="#f8b82d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/other_tab_pdf"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/other_tab_right_normal"
            android:gravity="center"
            android:text="PDF"
            android:textColor="#f8b82d"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/other_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp" >
    </ListView>

    <RelativeLayout
        android:id="@+id/other_edit_rl"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:visibility="gone"
        android:background="#f3f3f3"
        >
        <Button
            android:id="@+id/other_edit_down"
            android:textColor="@color/white"
            android:layout_width="88dp"
            android:layout_height="31dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="11dp"
            android:text="下载"
            android:background="@drawable/btn_yellow_shape"
            android:gravity="center"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/other_edit_del"
            android:textColor="@color/white"
            android:layout_width="88dp"
            android:layout_height="31dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="11dp"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:background="@drawable/btn_yellow_shape"
            android:gravity="center"
            android:textSize="18sp"
            />



        <Button
            android:id="@+id/other_edit_cancel"
            android:layout_alignParentBottom="true"
            android:text="取消"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_cancel_yellow_shape"
            android:textColor="#feb902"
            android:layout_width="305dp"
            android:layout_height="35dp" />



    </RelativeLayout>
    
    
    
    
    
</LinearLayout>