<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eeeeee"
              android:orientation="vertical" >

    <include android:id="@+id/rl_title" layout="@layout/title_bar" />

    <TableLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <TableRow
        >
        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_weight="1"
            android:background="#FFF"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_safebox_photo"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="照片"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_weight="1"
            android:background="#FFF"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_safebox_video"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>


    </TableRow>

        <TableRow
            >

            <LinearLayout
                android:id="@+id/ll_three"
                android:layout_weight="1"
                android:background="#FFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_safebox_decument"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文档"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_four"
                android:layout_weight="1"
                android:background="#FFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_safebox_audio"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="录音"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>


        </TableRow>

        <TableRow
            >
            <LinearLayout
                android:id="@+id/ll_five"
                android:layout_weight="1"
                android:background="#FFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_safebox_note"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记事本"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_six"
                android:layout_weight="1"
                android:background="#FFF"
                android:layout_margin="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_safebox_passwordmanager"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码管理器"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>


        </TableRow>



    </TableLayout>

</LinearLayout>