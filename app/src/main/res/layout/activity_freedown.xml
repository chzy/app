<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />



    <LinearLayout
        android:id="@+id/freedown_tab_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/freedown_hasdownload_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/freedown_tab_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="已下载"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/freedown_tab_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="未下载"
            android:textColor="#f8b82d"
            android:textSize="16sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/freedown_left_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:numColumns="3"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone" >
    </GridView>

    <ListView
        android:id="@+id/freedown_right_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >
    </ListView>

</LinearLayout>